@page "/reservas"
@using Models
@using Services
@inject IReservaService ReservaService

<MudText Typo="Typo.h4">Reserva</MudText>

@if (reservas == null)
{
    <p>Cargando...</p>
}
else
{
    <MudGrid>
        @foreach (var item in reservas)
        {
            <MudItem xs="12" sm="10" md="6" lg="4">
                <MudCard>
                    <MudCardHeader Class="blue lighten-1">
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@item.Nombre</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudText Typo="Typo.body2">@item.Descripcion</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Link="@($"/detalles/{item.Id}")" Variant="Variant.Outlined" Color="Color.Success">Detalles</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
}


@code {
    IEnumerable<Reserva> reservas = new List<Reserva>();

    protected override async Task OnInitializedAsync()
    {
        reservas = await ReservaService.GetAll();
    }
}
